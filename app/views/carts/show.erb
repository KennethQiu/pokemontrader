    <table class="table listing-table">
      <thead>
        <th>Pokeman for Sale</th>
        <th>I'm looking for</th>
        <th>Price</th>
      </thead>
      <tbody>
        <% @cart.listings.each do |listing|%>
          <tr>
          <% p = listing.pokemon %>
          <% pt = listing.pokemon_trade %>
          <td><div class="listing-table-td"><img src="<%= p.image_url %>"><%= p.name %></div></td>
          <td><div class="listing-table-td"><%= pt ? "<img src=\"#{pt.image_url}\">" : nil %><%= pt ? pt.name : nil %></div></td>
          <td><div class="listing-table-td"><%= pt ? (listing.price / 100.00).round(2) : 0 %>$</div></td>
          <td>
            <div class="listing-table-td">
              <form method="post" action="/cart/listing">
                <input type="hidden" name="_method" value="delete">
                <button class="btn btn-primary">Remove</button>
              </form>
            </div>
          </td>
          </tr>
        <% end %>
      </tbody>
    </table>