<!--search/filter-->
<div class="row search-bars">
  <div class="container wrapper col-md-offset-4 col-md-5">
    <label>Search by Name</label>
    <input type="text" class="form-control" id="search-bar-pokedex" placeholder="Search by name" name="keyword">
  </div>
  <div class="col-md-3">
    <label>Search by Type</label>
    <select data-placeholder="Choose a type..." class="chosen-select col-md-6" id="type-bar-pokedex" style="width: 200px;" multiple tabindex="2">
      <option value=""></option>
      <% Type.all.order(:name).each do |type|%>
        <option><%= type.name %></option>>
      <% end %>
    </select>
  </div>
</div>

<div class="container wrapper">
  <!--add to wish list form-->
   <form name='wish_list_form' method='post' action="pokemon/wish_list">
      <input id="pokemon_to_wish" type="hidden" name='id' value="">              
    </form>

  <!-- pokemon cards -->

  <% Species.all.each do |s| %>
    <div class="col-md-2 col-pokedex">
      <div class="thumbnail">
        <div class= "thumbnail-wrapper">
          <img class="thumbnail-image" src="<%= s.image_url %>" alt="<%= s.name %>" >
        </div>

        <div class="thumbnail-actions">
              <a href="pokemon/add/<%= s.id %>" class="add_to_profile_button"><!-- <span class='glyphicon glyphicon-plus-sign'></span> -->
                <!-- <img class="add_to_profile_button_img" src="/icons/pokeball-bw.png"> --> 
              </a>

            <!--buttons-->
            <a href="/pokemon/add/<%= s.id %>" class="popup-ajax"> Show inline popup</a>     
<!--             <a href="pokemon/add/<%= s.id %>"><span class='glyphicon glyphicon-plus-sign'></span></a> -->

            <a class="wish_list_button" data-id="<%= s.id %>" href="#"><span class='glyphicon glyphicon-heart'></span></a>   
        </div>

        <div class="caption">
          <%= s.name %>
        </div>

        <div class="species-type-wrapper">
          <% s.types.each do |type|%>
            <span class="background-color-<%= type.name.downcase %> pokemon-type-tag"><%= type.name %></span>
          <% end %>
        </div>

      </div>
    </div>
  <% end%>
</div>

